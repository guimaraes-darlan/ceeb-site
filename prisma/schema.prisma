generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Category {
  id         String    @id
  name       String
  created_at DateTime  @default(now())
  updated_at DateTime
  sync       Boolean   @default(false)
  Invoice    Invoice[]
}

model Configuration {
  id           String   @id
  penaltyValue Decimal
  lendingDays  Int
  created_at   DateTime @default(now())
  updated_at   DateTime
}

model Invoice {
  id          String   @id
  date        DateTime
  quantity    Decimal
  value       Decimal
  credit      Boolean  @default(false)
  paymentType String
  categoryId  String
  lendingId   String?
  created_at  DateTime @default(now())
  updated_at  DateTime
  sync        Boolean  @default(false)
  Category    Category @relation(fields: [categoryId], references: [id])
  Lending     Lending? @relation(fields: [lendingId], references: [id])
}

model Lending {
  id           String    @id
  bookId       String
  readerId     String
  date         DateTime
  expectedDate DateTime
  deliveryDate DateTime?
  code         String?
  returned     Boolean   @default(false)
  created_at   DateTime  @default(now())
  updated_at   DateTime
  sync         Boolean   @default(false)
  Invoice      Invoice[]
  books        books     @relation(fields: [bookId], references: [id])
  readers      readers   @relation(fields: [readerId], references: [id])
}

model User {
  id         String   @id
  name       String
  username   String
  email      String
  password   String
  created_at DateTime @default(now())
  updated_at DateTime
}

model books {
  id         String    @id
  name       String
  author     String
  writer     String?
  code       String
  borrow     Boolean   @default(false)
  created_at DateTime  @default(now())
  updated_at DateTime
  edition    String?
  sync       Boolean   @default(false)
  Lending    Lending[]
}

model readers {
  id         String    @id
  name       String
  phone      String?
  address    String?
  city       String?
  openLoan   Boolean   @default(false)
  created_at DateTime  @default(now())
  updated_at DateTime
  email      String?
  sync       Boolean   @default(false)
  Lending    Lending[]
}
